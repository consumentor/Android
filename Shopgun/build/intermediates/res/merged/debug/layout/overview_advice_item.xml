<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_button">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/semaphoreIndicator"
            android:src="@drawable/ic_info_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/advisorName"
            android:text="Advisor name"
            android:textSize="18sp"
            android:ellipsize="marquee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/semaphoreIndicator"
            android:textColor="@color/shopgun_green"
            android:paddingLeft="8dp"
            android:singleLine="true" />

        <consumentor.shopgun.aidroid.customview.ScrollingTextView
            android:id="@+id/adviceAbstract"
            android:text="KÃ¶p inte dumma saker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/advisorName"
            android:layout_alignLeft="@id/advisorName"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="1"
            android:paddingLeft="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <View style="@style/horizontalDelimiter"/>

