<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overviewHeader"
    android:orientation="horizontal"
    style="@style/BackgroundPlate">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/itemInfoButton"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/itemName"
            android:text="Item name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="@color/shopgun_green_darker"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/itemLogotype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:padding="8dp" />


    </LinearLayout>

    <ImageView style="@style/verticalDelimiter" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/selector_button"
        android:onClick="onShowAdvices">

        <TextView
            android:text="@string/circle_diagram_header"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/shopgun_green_darker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <consumentor.shopgun.aidroid.customview.CircleDiagram
            android:id="@+id/circleDiagram"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="96dp"
            android:minHeight="96dp" />
    </LinearLayout>
