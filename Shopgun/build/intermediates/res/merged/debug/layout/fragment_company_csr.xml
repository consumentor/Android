<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/csrListContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="48dp"
        >

        <ImageView
            android:id="@+id/companyLogotype"
            style="@style/BackgroundPlate.Logotype"/>


        <LinearLayout
            android:orientation="vertical"
            style="@style/BackgroundPlate"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:text="@string/csr_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"/>

            <View
                style="@style/horizontalDelimiter" />

            <ExpandableListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/csrNoMemberInfo"
        android:text="@string/csr_no_member"
        style="@style/BackgroundPlate.InfoText"/>

</RelativeLayout><!-- From: file:/Users/Simon/Consumentor/Development/GitHub/OpenSource/Android/Shopgun/src/main/res/layout/fragment_company_csr.xml -->